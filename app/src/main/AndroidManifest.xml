            android:name=".view.viewpager.TabViewPagerActivity"
            android:exported="true" />
        <activity
            android:name=".view.user.UserInfoActivity"
            android:exported="true" />
        <activity
            android:name=".view.login.ModifyPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".view.login.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
