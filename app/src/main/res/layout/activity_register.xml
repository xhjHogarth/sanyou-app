<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.login.RegisterActivity"
    android:background="@color/gray">

    <include
        android:id="@+id/title_bar"
        layout="@layout/titlebar"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_user_login2"/>

    <RelativeLayout
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <EditText
            android:id="@+id/username_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/searchbox_bj"
            android:hint="请输入用户名"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:paddingLeft="15dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ivDeleteName"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingRight="20dp"
            android:src="@drawable/ic_delete_login"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <EditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/searchbox_bj"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="10"
            android:paddingLeft="15dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ivDeletePwd"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingRight="20dp"
            android:src="@drawable/ic_delete_login"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <EditText
            android:id="@+id/confirm_password_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/searchbox_bj"
            android:hint="请再次确认输入密码"
            android:inputType="textPassword"
            android:maxLength="10"
            android:paddingLeft="15dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ivDeleteConfirmPwd"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingRight="20dp"
            android:src="@drawable/ic_delete_login"
            android:visibility="gone"/>
    </RelativeLayout>


