<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_bar"
        layout="@layout/titlebar" />

    <LinearLayout
        android:id="@+id/my_info_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/title_bar">

        <ImageView
            android:id="@+id/ivMyImg"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txUsername"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称:xhj"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/txId"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:153446784"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_detail_ll"
        android:layout_below="@+id/my_info_ll"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:src="@drawable/ic_mine_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_weight="1.0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个人资料"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivSpilt1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/info_detail_ll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/collect_ll"
        android:layout_below="@+id/ivSpilt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:src="@drawable/ic_mine_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_weight="1.0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的收藏"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivSpilt2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/collect_ll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/history_ll"
        android:layout_below="@+id/ivSpilt2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:src="@drawable/ic_mine_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_weight="1.0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="历史记录"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivSpilt3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/history_ll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/help_ll"
        android:layout_below="@+id/ivSpilt3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:src="@drawable/ic_mine_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_weight="1.0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="问题反馈"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivSpilt4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/help_ll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/message_ll"
        android:layout_below="@+id/ivSpilt4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:src="@drawable/ic_mine_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_weight="1.0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="消息中心"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>

    </LinearLayout>


    <Button
        android:id="@+id/sign_out_btn"
        android:text="退出登录"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/loginout_button_shape"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>